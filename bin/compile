#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

indent() {
  sed -u 's/^/       /'
}

echo "-----> Found a dolan_cache.json"

rm -fr "$1/tmp/cache/base_project"

pushd .
cd "$1/node_modules/yo-dolan"
./node_modules/grunt-cli/bin/grunt --debug --verbose generate --dolan="../../config/dolan_cache.json" --target="../../tmp/cache"
popd

ruby -e "
  require 'json'
  require './lib/packager/workspace_additions/bower_installer'
  require './lib/env'
  Packager::WorkspaceAdditions::BowerInstaller.new('./tmp/cache/base_project/bower.json').install(Env::BOWER_DEPENDENCIES)
"

pushd .
cd "$1/tmp/cache/base_project"
npm install
../../../node_modules/steroids/node_modules/bower/bin/bower update
popd

exit 0
